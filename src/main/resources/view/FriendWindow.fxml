<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.stage.Stage?>

<fx:root alwaysOnTop="true" minHeight="300.0" minWidth="400.0" resizable="false" title="View Friend" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/avatars/Avatar0.png"/>
    </icons>
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@../stylesheets/Fonts.css" />
                <URL value="@../stylesheets/FriendBookTheme.css" />
            </stylesheets>
         <VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="20.0" styleClass="friend-window">

               <ImageView fx:id="avatar" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
               </ImageView>
            <FlowPane fx:id="tags" alignment="CENTER" columnHalignment="CENTER" />
            <HBox fx:id="viewContainer" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="15.0">

                  <VBox fx:id="teleImageViewContainer" alignment="TOP_CENTER" fillWidth="false">

                         <ImageView fx:id="teleImageView" fitHeight="55.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
                              <Image url="@../images/telegram_icon.png" />
                         </ImageView>
                  <HBox.margin>
                     <Insets left="10.0" top="5.0" />
                  </HBox.margin>

                  </VBox>

                   <VBox alignment="CENTER" fillWidth="false">
                       <StackPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
                           <Circle fill="#f9edcd" radius="30.0" stroke="BLACK" strokeType="INSIDE" />
                           <Label fx:id="daysToBirthday" text="5" textAlignment="CENTER" textOverrun="CLIP" />
                           <VBox.margin>
                               <Insets />
                           </VBox.margin>
                       </StackPane>
                       <Label maxWidth="100.0" styleClass="cell_small_label" text="Days left to Birthday" textAlignment="CENTER" wrapText="true">
                           <VBox.margin>
                               <Insets />
                           </VBox.margin>
                           <padding>
                               <Insets bottom="10.0" />
                           </padding>
                       </Label>
                   </VBox>

            </HBox>

               <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">

                     <VBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                           <Label fx:id="name" maxHeight="1.7976931348623157E308" text="Name" wrapText="true" VBox.vgrow="ALWAYS" />
                           <Label fx:id="birthday" maxHeight="1.7976931348623157E308" text="Birthday" wrapText="true" VBox.vgrow="ALWAYS" />
                           <Label fx:id="phone" maxHeight="1.7976931348623157E308" text="Phone" wrapText="true" VBox.vgrow="ALWAYS" />
                           <Label fx:id="address" maxHeight="1.7976931348623157E308" text="Address" wrapText="true" VBox.vgrow="ALWAYS" />
                           <Label fx:id="email" maxHeight="1.7976931348623157E308" text="Email" wrapText="true" VBox.vgrow="ALWAYS" />
                           <Label fx:id="teleHandle" maxHeight="1.7976931348623157E308" text="teleHandle" wrapText="true" VBox.vgrow="ALWAYS" />
                           <Label fx:id="description" maxHeight="1.7976931348623157E308" minHeight="-Infinity" text="Description" wrapText="true" VBox.vgrow="ALWAYS" />
                  <HBox.margin>
                     <Insets left="10.0" right="5.0" />
                  </HBox.margin>

                     </VBox>
               <VBox.margin>
                  <Insets top="-20.0" />
               </VBox.margin>

               </HBox>

            <padding>
               <Insets top="10.0" />
            </padding>
         </VBox>
        </Scene>
    </scene>
</fx:root>
