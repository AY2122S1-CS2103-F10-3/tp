<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@Fonts.css" />
        <URL value="@FriendBookTheme.css" />
      </stylesheets>
         <AnchorPane prefHeight="560.0" prefWidth="1271.0" >
            <children>
               <Label layoutX="3.0" layoutY="507.0" prefHeight="53.0" prefWidth="1263.0">
                  <font>
                     <Font size="24.0" />
                  </font>
               </Label>
            <HBox alignment="BOTTOM_CENTER" prefHeight="559.0" prefWidth="1271.0">
              <children>
                <Label fx:id="helpMessage" text="Label">
                  <HBox.margin>
                    <Insets right="5.0" />
                  </HBox.margin>
                </Label>
                <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL">
                  <HBox.margin>
                    <Insets left="5.0" />
                  </HBox.margin>
                </Button>
              </children>
              <opaqueInsets>
                <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
              </opaqueInsets>
              <padding>
                <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
              </padding>
            </HBox>
               <Label styleClass="help-title" alignment="TOP_LEFT" layoutX="3.0" layoutY="4.0" text="Commands">
               </Label>
               <Label layoutX="3.0" layoutY="48.0" prefHeight="53.0" prefWidth="1263.0" text="Adding a command: add">

               </Label>
               <Label layoutX="37.0" layoutY="94.0" prefHeight="29.0" prefWidth="1227.0"  text="Adding adds a person to the address book. Format: add [n/NAME] [p/PHONE_NUMBER] [e/EMAIL] [a/ADDRESS] [t/TAG] [tele/TELE_USERNAME] [b/BIRTHDAY(dd/mm)]..." />
               <Label layoutX="3.0" layoutY="119.0" prefHeight="53.0" prefWidth="1263.0" text="Listing all contacts : list">
               </Label>
               <Label layoutX="3.0" layoutY="180.0" prefHeight="53.0" prefWidth="1263.0" text="Editing a contact : edit">

               </Label>
               <Label layoutX="36.0" layoutY="161.0" prefHeight="29.0" prefWidth="1231.0"  text="Shows a list of all contacts in the Friend book. Format: list" />
               <Label layoutX="36.0" layoutY="222.0" prefHeight="29.0" prefWidth="1227.0"  text="Edits an existing contact in the address book. Format: edit INDEX [n/NAME] [p/PHONE_NUMBER] [e/EMAIL] [a/ADDRESS] [t/TAG] [tele/TELE_USERNAME] [b/BIRTHDAY(dd/mm)]..." />
               <Label layoutX="3.0" layoutY="244.0" prefHeight="53.0" prefWidth="1263.0"  text="Searching by keyword: find">
               </Label>
               <Label layoutX="36.0" layoutY="285.0" prefHeight="29.0" prefWidth="1229.0"  text="Finds contacts whose names, email, address, tags or telegram username contain any of the given keywords. Format: find [n/NAME] [p/PHONE_NUMBER] [e/EMAIL] [a/ADDRESS] [t/TAG] [tele/TELE_USERNAME] [b/BIRTHDAY(dd/mm)]..." />
               <Label layoutX="69.0" layoutY="308.0" prefHeight="29.0" prefWidth="1198.0"  text="find command searches for names with the given input, findTag searches for tags with the given input, findAddress searches for addresses with the given input, and so on" />
               <Label layoutX="3.0" layoutY="330.0" prefHeight="53.0" prefWidth="1263.0" text="Deleting a contact : delete">

               </Label>
               <Label layoutX="3.0" layoutY="373.0" prefHeight="29.0" prefWidth="1263.0" text="          Deletes the specified contact from the friend book. Format: delete INDEX" />
            </children>
         </AnchorPane>
    </Scene>
  </scene>
</fx:root>
